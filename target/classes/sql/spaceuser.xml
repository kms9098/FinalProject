<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
	<update id="upgradeUserGrade" parameterType="string">
		update spaceuser 
		set grade = grade+1 
		where id = #{value}  
	</update>
     <resultMap type="point" id="pointRM">
         <result property="id" column="id"/>
         <result property="kind" column="kind"/>
         <result property="balance" column="balance"/>
         <result property="amount" column="amount"/>
      </resultMap>
	<select id="getAllTransactionInfo" parameterMap="string" resultMap="pointRM">
		select id,kind,balance,amount from point
	</select>
	
	  <resultMap type="deal" id="dealRM">
      <result property="dNo" column="d_no"/>
      <result property="id" column="id"/>
      <result property="pNo" column="p_no"/>
      <result property="resDate" column="res_date"/>
      <result property="resTime" column="res_time"/>
      <result property="bTel" column="btel"/>
      <result property="sTel" column="stel"/>
      <result property="title" column="title"/>
      <result property="area" column="area"/>
      <result property="grade" column="grade"/>
      <result property="accept" column="accept"/>
      </resultMap>
   
      <select id="getDealInfo" resultMap="dealRM" parameterType="string">
      SELECT * from deal where d_no=#{value}
      </select> 
      
      <insert id="fillPoint" parameterType="point">
      INSERT INTO point(id, kind, balance, amount) VALUES (#{id},#{kind},#{balance},#{amount})
      </insert>
      
      <select id="findPassword" parameterType="user" resultType="string">
	  SELECT password FROM spaceuser 
	  WHERE id=#{id} AND name=#{name}
      </select>
   
      <select id="getUserInfo" parameterType="string" resultType="user">
      SELECT id, name, address, point, auction, product, crn, grade, tel 
      FROM spaceuser
      WHERE id=#{value};
      </select>
      <resultMap type="user" id="loginRM">
      <result property="id" column="id" />
      <result property="password" column="password" />
      <result property="name" column="name" />
      <result property="address" column="address" />
      <result property="pointVO" column="point" />
      <result property="auctionVO" column="auction" />
      <result property="pList" column="product" />
      <result property="crn" column="crn" />
      <result property="grade" column="grade" />
      <result property="tel" column="tel" />
  	  </resultMap>
  	  
  	  <insert id="registerUser" parameterType="user">
      INSERT INTO spaceuser(id, password, name, address, point, auction, product, crn, grade) 
      VALUES(#{id}, #{password}, #{name}, #{address}, #{point}, #{auction}, #{product}, #{crn}, #{grade})
   	  </insert>
   
      <select id="loginUser" parameterType="user" resultMap="loginRM">
      SELECT id, password, name, address, point, auction, product, crn 
      FROM spaceuser
      WHERE id=#{id} AND password=#{password}
      </select>
   
      <update id="updateUser" parameterType="user">
      UPDATE spaceuser 
      SET password=#{password}, name=#{name}, address=#{address} 
      WHERE id=#{id}
      </update>
</mapper>